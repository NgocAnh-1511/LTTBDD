<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightCream"
    tools:context=".Activity.CompleteProfileActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/ivLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp"
                android:src="@drawable/logo"
                android:background="@drawable/profile_circle_bg"
                android:padding="16dp"
                tools:ignore="ContentDescription" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/complete_profile_title"
                android:textColor="@color/darkBrown"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/complete_profile_subtitle"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:gravity="center" />

            <!-- White Card -->
            <LinearLayout
                android:id="@+id/whiteCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/white_card_bg"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Full Name Input -->
                <EditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="@string/enter_full_name"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:textSize="18sp"
                    android:textColorHint="@color/grey" />

                <!-- Email Input -->
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="20dp"
                    android:textSize="18sp"
                    android:textColorHint="@color/grey" />

                <!-- Complete Button -->
                <Button
                    android:id="@+id/btnComplete"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/orange_button_bg"
                    android:text="@string/complete"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:backgroundTint="@null"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

