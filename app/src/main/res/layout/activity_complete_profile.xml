<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightCream"
    tools:context=".Activity.CompleteProfileActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:paddingBottom="100dp">

            <!-- Profile Avatar -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="80dp">

                <ImageView
                    android:id="@+id/ivProfileAvatar"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile"
                    android:background="@drawable/profile_circle_bg"
                    android:contentDescription="Ảnh đại diện"
                    android:clickable="true"
                    android:focusable="true" />

                    <ImageView
                        android:id="@+id/ivCameraIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="4dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_camera"
                        android:background="@drawable/brown_full_corner_bg"
                        android:padding="8dp"
                        android:contentDescription="Đổi ảnh đại diện"
                        android:clickable="true"
                        android:focusable="true" />
            </FrameLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/complete_profile_title"
                android:textColor="@color/darkBrown"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/complete_profile_subtitle"
                android:textColor="@color/grey"
                android:textSize="16sp"
                android:gravity="center" />

            <!-- White Card -->
            <LinearLayout
                android:id="@+id/whiteCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:background="@drawable/white_card_bg"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Last Name Input (Họ & tên đệm) -->
                <EditText
                    android:id="@+id/etLastName"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="Họ &amp; tên đệm"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:textSize="18sp"
                    android:textColorHint="@color/grey" />

                <!-- First Name Input (Tên) -->
                <EditText
                    android:id="@+id/etFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="Tên"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="20dp"
                    android:textSize="18sp"
                    android:textColorHint="@color/grey" />

                <!-- Email Input -->
                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_field_bg"
                    android:hint="@string/enter_email"
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="20dp"
                    android:textSize="18sp"
                    android:textColorHint="@color/grey" />

                <!-- Complete Button -->
                <Button
                    android:id="@+id/btnComplete"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="28dp"
                    android:background="@drawable/orange_button_bg"
                    android:text="@string/complete"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:backgroundTint="@null"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>


